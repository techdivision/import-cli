{
  "operations": {
    "general": {
      "debug": {
        "create": {
          "plugins": {
            "debug.send": {
              "id": "import_cli.plugin.debug.create"
            }
          }
        },
        "send": {
          "plugins": {
            "debug.send": {
              "id": "import_cli.plugin.debug.send",
              "mailer" : {
                "id" : "import.logger.factory.transport.mailer.sendmail",
                "params" : {
                  "to" : "helpdesk@techdivision.com",
                  "from" : "pacemaker@localhost",
                  "subject": "Pacemaker Debug Report",
                  "content-type" : "text/html"
                },
                "transport" : {
                  "params" : {
                    "smtp-host" : "localhost",
                    "smtp-port" : 25
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
